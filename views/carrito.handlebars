<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página Principal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .tarjeta-producto {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
            text-align: center;
        }
        .nombre {
            font-size: 18px;
            font-weight: bold;
        }
        .descripcion {
            margin-top: 10px;
        }
        .total {
            font-size: 24px;
            font-weight: bold;
            text-align: right;
        }
        .btn-compra {
            margin-top: 20px;
            display: block;
            width: 100%;
        }
    </style>
</head>
<body class="wallpaper">

<div style="height: 40px;"></div>

<div class="container" style="width: 100%; max-width: 300px; max-height: 85px; text-align: center; padding: 1rem; background-color: black; border-radius: 10px; box-shadow: 0 0px 0px rgba(0, 0, 0, 0); min-height: 80px;">
    <div class="container" style="width: 100%; max-width: 270px; text-align: center; padding: 0rem; background-color: white; border-radius: 0px; box-shadow: 0 0px 0px rgba(0, 0, 0, 0.1); min-height: 50px;">
        <div style="height: 0px;"></div>
        <p>Usuario: <br> <span id="rango">{{email}}</span></p>
    </div>
</div>

<div style="height: 40px;"></div>

<div class="container my-5">
    <div class="row">
        {{#each lista}}
        <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
            <div class="tarjeta-producto">
                <img src="{{{this.link_imagen_principal}}}" alt="Producto" class="img-fluid">
                <div class="nombre">{{this.nombre}}</div>
                <div class="descripcion">
                    Precio: $<span class="precio">{{this.precio}}</span> USD<br>{{this.datof}}<br>{{this.datos}}
                </div>
                <div class="cantidad">{{this.cantidad}}</div>
            </div>
        </div>
        {{/each}}
    </div>

    <!-- Resumen del carrito -->
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="total">Total: $<span id="total">0.00</span> USD</div>
                <button class="btn btn-primary btn-compra">Confirmar Compra</button>
            </div>
        </div>
    </div>
</div>

<script>
    // Lógica para el carrito
    let total = 0;

    // Seleccionar todos los botones de "Añadir al carrito"
    document.querySelectorAll('.agregar-carrito').forEach(function(button) {
        button.addEventListener('click', function() {
            // Obtener el precio del producto
            let precio = parseFloat(this.parentElement.querySelector('.precio').textContent);
            // Sumar al total
            total += precio;
            // Actualizar el total en el HTML
            document.getElementById('total').textContent = total.toFixed(2);
        });
    });

    // Acción al confirmar la compra
    document.querySelector('.btn-compra').addEventListener('click', function() {
        alert('Compra confirmada. Total: $' + total.toFixed(2) + ' USD');
        // Aquí puedes agregar la lógica para enviar el total al servidor
    });
</script>

</body>
</html>
